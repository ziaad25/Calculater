<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StartUp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/background</item>
        <!-- Secondary brand color. -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="buttun">
        <item name="backgroundTint">@color/backgroundButtonColor</item>
        <item name="android:textColor">@color/colorNumber</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="buttunalpha">
        <item name="backgroundTint">@color/backgroundButtonColor</item>
        <item name="android:textColor">@color/alphaColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NumberInEqual">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#61FFFFFF</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="NumberInResult">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAlignment">textStart</item>
    </style>


    <style name="NumberInCalc">
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="operation">
        <item name="background">@drawable/button_shape</item>
        <item name="android:textColor">@color/operationColor</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>