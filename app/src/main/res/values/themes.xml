<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StartUp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/background</item>
        <!-- Secondary brand color. -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="buttun">
        <item name="android:textColor">@color/colorNumber</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="buttunalpha">
        <item name="android:textColor">@color/alphaColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="nameOfResult">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/nameResult</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="NumberInResult">
        <item name="android:maxLength">5</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#DEFFFFFF</item>
        <item name="android:textAlignment">textStart</item>
    </style>


    <style name="NumberInTextInput">
        <item name="android:maxLength">20</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">#DEFFFFFF</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="operation" parent="Widget.AppCompat.Button">
        <item name="background">@drawable/button_shape</item>
        <item name="android:textColor">@drawable/textinbutton</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>